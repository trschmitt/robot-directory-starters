<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="/profile.css">
</head>

<body>
  <div class="profile">
    <div class="image">
      <img src= {{ avatar }}>
    </div>
    {{ #job }}
    <div class="info">
      <h1>{{ name }}</h1>
      <p>{{ address.city }}, {{ address.country }} | {{ . }}, {{ company }}</p>
      <p>{{ email }} | {{ phone }}</p>
    </div>
    {{ /job }}
    {{ ^job }}
    <div class="info">
      <h1>{{ name }}</h1>
      <p>{{ address.city }}, {{ address.country }} | <span id="hireme">Available For Hire</span></p>
      <p>{{ email }} | {{ phone }}</p>
    </div>
    {{ /job }}
    <div class="other-info">
      <p id='education'> Education: {{ university }}</p>
      <div id='skills'>
        <p> Skills:
          <ul>
            {{ #skills }}
            <li> {{ . }}</li>
            {{ /skills }}
          </ul>
        </p>
      </div>
    </div>
  </div>
</body>

</html>
